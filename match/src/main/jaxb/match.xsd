<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
	xmlns:jxb="http://java.sun.com/xml/ns/jaxb"
	jxb:version="2.1">

	<!-- allow xml:base attribute in order to avoid include errors -->
	<xsd:import namespace="http://www.w3.org/XML/1998/namespace" schemaLocation="http://www.w3.org/2005/08/xml.xsd" />

	<xsd:include schemaLocation="../../../../submodules/edgeutils/jaxb/commons.xsd" />

	<xsd:element name="match" type="Match" />

	<xsd:complexType name="Match">
		<xsd:complexContent>
			<xsd:extension base="ModelClass">
				<xsd:sequence>
					<xsd:element name="title" type="StringProperty" minOccurs="0" maxOccurs="1" />

					<xsd:element name="date" type="LocalDateProperty" minOccurs="1" maxOccurs="1" />
					<xsd:element name="start" type="LocalTimeProperty" minOccurs="0" maxOccurs="1" />
					<xsd:element name="end" type="LocalTimeProperty" minOccurs="0" maxOccurs="1" />

					<xsd:element name="set" type="Set" minOccurs="1" maxOccurs="unbounded" />

					<xsd:element name="set-result" type="Result" minOccurs="0" maxOccurs="1" />

					<xsd:element name="live-pz-diff" type="IntegerProperty" minOccurs="0" maxOccurs="1" />

					<xsd:element name="player-a" type="Player" minOccurs="0" maxOccurs="1" />
					<xsd:element name="player-b" type="Player" minOccurs="0" maxOccurs="1" />

				</xsd:sequence>
			</xsd:extension>
		</xsd:complexContent>
	</xsd:complexType>

	<xsd:complexType name="Set">
		<xsd:complexContent>
			<xsd:extension base="ModelClass">
				<xsd:sequence>
					<xsd:element name="result" type="Result" minOccurs="0" maxOccurs="1" />
				</xsd:sequence>
			</xsd:extension>
		</xsd:complexContent>
	</xsd:complexType>

	<xsd:complexType name="Result">
		<xsd:complexContent>
			<xsd:extension base="ModelClass">
				<xsd:sequence>
					<xsd:element name="won-a" type="BooleanProperty" minOccurs="1" maxOccurs="1" />
					<xsd:element name="number" type="IntegerProperty" minOccurs="1" maxOccurs="1" />
				</xsd:sequence>
			</xsd:extension>
		</xsd:complexContent>
	</xsd:complexType>

	<xsd:complexType name="Player">
		<xsd:complexContent>
			<xsd:extension base="ModelClass">
				<xsd:sequence>
					<xsd:element name="name" type="StringProperty" minOccurs="0" maxOccurs="1" />
					<xsd:element name="live-pz" type="IntegerProperty" minOccurs="0" maxOccurs="1" />
				</xsd:sequence>
			</xsd:extension>
		</xsd:complexContent>
	</xsd:complexType>

</xsd:schema>

